extends ../_layouts/base

block variables
  - var isPopupFail = true
  - var isPopupSuccess = true
  - var selected = "form.html"

block content
  +heading("Конкурс на самое безбашеное путешествие с Пинк")

  +b.FORM.form(
    action="/echo",
    method="post"
  )
    .box
      .container
        +description("Поделитесь своей историей и получите шанс выиграть ценный приз — 1000 миль на вашу бонусную карту!")

        each item in site.data.inputs.nameInputs
          +form-group(item)

    .box.box--gray
      .container
        p.form__title Ваши безбашенные достижения в путешествии
        each item in site.data.inputs.achievementsCheckboxes
          +checkbox(item)
    .box
      .container
        each item in site.data.inputs.contactInputs
          +form-group(item)

    .box.box--gray
      .container
        p.form__title С каким приложением путешествовали?
        each item in site.data.inputs.osRadios
          +radio(item)

    .box
      .container
        fieldset.form__text
          label.form__title(for="user-racall") Опишите свои эмоции
          textarea.form__textarea(
            placeholder="Можно прям в красках, не стесняясь в выражениях",
            name="user-recall",
            id="user-recall"
          )

    +e.btn
      +b.BUTTON.btn--form(type = "submit") Отправить форму

    +e.SPAN.footnote
      +e.SPAN.color *
      |— обязательные поля
